<Window x:Class="Hyperpharm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hyperpharm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#202020">
	<Grid>
		<Grid>    
        <Grid.ColumnDefinitions>    
            <ColumnDefinition Width="4*"></ColumnDefinition>    
            <ColumnDefinition Width="1*"></ColumnDefinition>   
            <ColumnDefinition Width="4*"></ColumnDefinition> 
        </Grid.ColumnDefinitions>    
        <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <GroupBox
                BorderThickness="0"
                FontWeight="Bold"
                Foreground="#47bfb9"
				Grid.Row="0"
				Grid.Column="0"
				Background="#FFFFFF"
				Margin="10, 10, 5, 10"
				>

                <StackPanel Orientation="Vertical">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Image Source="res/rabbit_profile.jpg" Grid.Row="0" Grid.Column="0" ></Image>
                        <Image Source="res/rabbit_profile.jpg" Grid.Row="0" Grid.Column="1"></Image>

                        
                        
                    </Grid>

                    <StackPanel Orientation="Vertical" Margin="10">
                        <DockPanel Height="50">
                            <Button DockPanel.Dock="Left" HorizontalAlignment="Left" Width="120" VerticalAlignment="Stretch" 
                                    Padding="5" Margin="0, 0, 5, 0">
                                Administer drug...
                            </Button>
                            <TextBlock DockPanel.Dock="Right" Background="#DDDDDD" 
                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"
                                       Padding="17" Margin="5, 0, 0, 0">
                                Propantheline
                            </TextBlock>
                        </DockPanel>
                        <Button HorizontalAlignment="Stretch" Height="100" >Sample</Button>
                    </StackPanel>
                    
                </StackPanel>
                
            </GroupBox>

			<GroupBox
                BorderThickness="0"
				Grid.Row="0"
				Grid.Column="2"
				Background="#FFFFFF"
				Margin="5, 10, 10, 10"
				>


			</GroupBox>

            <GroupBox
                BorderThickness="0"
				Grid.Row="0"
				Grid.Column="1"
				Background="#FFFFFF"
				Margin="5, 10, 5, 10"
				>


            </GroupBox>

        </Grid> 
	</Grid>
</Window>
